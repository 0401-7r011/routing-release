#!/bin/bash

set -e -x

pushd src/github.com/coreos/etcd
  go install .
popd

export PATH=$PATH:$PWD/bin

if [ -n "$PACKAGE" ]; then
  ginkgo -r -p "$@" "./src/${PACKAGE}"
else
  pushd src/github.com/cloudfoundry-incubator/
    ginkgo -r -keepGoing -p -trace -randomizeAllSpecs -progress \
      cf-tcp-router tcp-emitter "$@"
  popd
fi
