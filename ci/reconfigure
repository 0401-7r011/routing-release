#!/usr/bin/env bash

set -euo pipefail

PIPELINE_DIR="$(dirname $0)/pipelines"

PIPELINE_NAME=${1:-routing}
echo "Setting default pipline 'routing' as none was provided."

fly -t ga sync

fly \
  --target ga \
  set-pipeline \
  --pipeline "${PIPELINE_NAME}" \
  --config "${PIPELINE_DIR}/${PIPELINE_NAME}.yml"
