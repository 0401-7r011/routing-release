<%=
  def client_cert
    if_p('routing_api.client_cert') do |prop|
      return prop
    end.else do
      if_link('routing_api') do |link|
        return link.p('routing_api.mtls_client_cert')
      end
    end
    raise RuntimeError, 'Routing API client certificate not found in properties nor in routing_api Link. This value can be specified using the routing_api.client_cert property.'
  end

  client_cert
-%>
