#!/bin/bash
# vim: set ft=sh

set -e -x

pidfile=/var/vcap/sys/run/bpm/gorouter/gorouter.pid
logfile=/var/vcap/sys/log/gorouter/drain.log
log_format=<%= p("router.logging.format.timestamp") %>
mkdir -p "$(dirname ${logfile})"

if [[ ! -f ${pidfile} ]]; then

  if [ "$log_format" == "deprecated" ]; then
    echo "$(date): pidfile does not exist" >> ${logfile}
  else
    echo "$(date +%Y-%m-%dT%H:%M:%S.%sZ): pidfile does not exist" >> ${logfile}
  fi
  echo 0
  exit 0
fi

pid="$(cat ${pidfile})"

if kill -USR1 "${pid}"; then
  if [ "$log_format" == "deprecated" ]; then
    echo "$(date): triggering drain" >> ${logfile}
  else
    echo "$(date +%Y-%m-%dT%H:%M:%S.%sZ): triggering drain" >> ${logfile}
  fi
  echo -5
else
  if [ "$log_format" == "deprecated" ]; then
    echo "$(date): gorouter exited" >> ${logfile}
  else
    echo "$(date +%Y-%m-%dT%H:%M:%S.%sZ): gorouter exited" >> ${logfile}
  fi
  rm ${pidfile}
  echo 0
fi
